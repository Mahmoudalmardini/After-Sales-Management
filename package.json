{
  "name": "after-sales-system",
  "version": "1.0.0",
  "description": "After-Sales Service Management System",
  "main": "backend/dist/index.js",
  "scripts": {
    "build": "cd frontend && npm install && npm run build && cd ../backend && npm install && npm run build",
    "start": "cd backend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "postbuild": "cp -r frontend/build backend/dist/public || xcopy frontend\\build backend\\dist\\public /E /I /H /Y"
  },
  "keywords": [
    "after-sales",
    "service-management",
    "nodejs",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}