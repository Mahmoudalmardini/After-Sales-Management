# Production Environment Configuration
NODE_ENV=production

# PostgreSQL Database Configuration
DATABASE_URL="postgresql://after_sales_user:secure_production_password@postgres:5432/after_sales_db?schema=public"

# For Cloud Databases (uncomment the one you're using):
# Railway PostgreSQL
# DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"

# AWS RDS PostgreSQL
# DATABASE_URL="postgresql://username:password@after-sales-db.cluster-xxx.us-west-2.rds.amazonaws.com:5432/after_sales_db"

# Azure Database for PostgreSQL
# DATABASE_URL="postgresql://username:password@after-sales-server.postgres.database.azure.com:5432/after_sales_db?sslmode=require"

# Google Cloud SQL PostgreSQL
# DATABASE_URL="postgresql://username:password@xxx.xxx.xxx.xxx:5432/after_sales_db"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="production-jwt-secret-change-this-to-256-bit-secure-key"
JWT_REFRESH_SECRET="production-refresh-secret-change-this-to-256-bit-secure-key"

# Server Configuration
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN="https://your-production-domain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=warn

# Email Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
